<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="daleWebAuth.Pages.Other.SuccessPage"
             Title="Success" Visual="Material">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Image Source="green_check_mark.png"></Image>
            <Label Text="Congraulations" HorizontalOptions="CenterAndExpand" FontSize="Title" FontAttributes="Bold"></Label>
            <Label Text="You are connected to dale!" 
                   FontSize="Body"
                   HorizontalOptions="CenterAndExpand" 
                   HorizontalTextAlignment="Center"/>
            <Button Text="Done" Style="{StaticResource ButtonStyle}"
                    VerticalOptions="CenterAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>