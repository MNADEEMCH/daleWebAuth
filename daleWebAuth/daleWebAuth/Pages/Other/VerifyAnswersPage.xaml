<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="daleWebAuth.Pages.Other.VerifyAnswersPage"
             xmlns:base="clr-namespace:daleWebAuth.ViewModels.Base;assembly=daleWebAuth" 
             xmlns:local="clr-namespace:daleWebAuth.ViewModels.Other"
             x:DataType="local:VerifyAnswersViewModel"
             base:ViewModelLocator.AutoWireViewModel="True"
             Visual="Material" Title="Security Question Answers">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Entry Placeholder="Enter debit card last 4 digits" Keyboard="Numeric" MaxLength="4" ReturnType="Next" BackgroundColor="Transparent"/>
            <Entry Placeholder="Mother name" ReturnType="Next" Keyboard="Text" BackgroundColor="Transparent"/>
            <Entry Placeholder="Birth city name" ReturnType="Next" Keyboard="Text" BackgroundColor="Transparent"/>
            <Button Text="Finish" Style="{StaticResource ButtonStyle}" Margin="0,15,0,0" Command="{Binding DoneCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>