<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="daleWebAuth.Pages.Other.OTPPage"
             xmlns:base="clr-namespace:daleWebAuth.ViewModels.Base;assembly=daleWebAuth" 
             xmlns:local="clr-namespace:daleWebAuth.ViewModels.Other"
             x:DataType="local:OTPViewModel"
             base:ViewModelLocator.AutoWireViewModel="True"
             Title="OTP Verification" Visual="Material">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Enter OTP" BackgroundColor="Transparent" Keyboard="Numeric" MaxLength="10"/>
            <Button Text="Verify" Style="{StaticResource ButtonStyle}" Command="{Binding VerifyCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>