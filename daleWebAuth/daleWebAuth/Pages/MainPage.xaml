<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="daleWebAuth.Pages.MainPage"
             xmlns:base="clr-namespace:daleWebAuth.ViewModels.Base;assembly=daleWebAuth" 
             xmlns:local="clr-namespace:daleWebAuth.ViewModels"
             x:DataType="local:MainViewModel"
             base:ViewModelLocator.AutoWireViewModel="True">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button" x:Key="ButtonStyle">
                <Setter Property="BackgroundColor" Value="CadetBlue"/>
                <Setter Property="CornerRadius" Value="5"/>
                <Setter Property="TextColor" Value="White"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout Padding="20">
            <Button Text="Authenticate"  Command="{Binding AuthorizeCommand}" Style="{StaticResource ButtonStyle}"/>
            <Button Text="Login"  Command="{Binding LoginCommand}" Style="{StaticResource ButtonStyle}" Margin="0,10,0,0"/>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>
